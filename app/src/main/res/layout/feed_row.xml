<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">


    <ImageView
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/ivProfileFeed"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


    <TextView
        android:textColor="@color/grey900"
        android:textSize="18dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/ivProfileFeed"
        android:id="@+id/tvNameFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tvNameFeed"
        android:layout_toRightOf="@id/ivProfileFeed"
        android:id="@+id/ivClock"
        android:src="@drawable/ic_access_time_black_24dp"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    
    <TextView
        android:layout_below="@+id/tvNameFeed"
        android:textSize="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/ivClock"
        android:id="@+id/tvTimeStampFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/ivProfileFeed"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:id="@+id/tvMessageFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"/>


    <RelativeLayout
        android:padding="8dp"
        android:layout_below="@id/tvMessageFeed"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/relative"
        android:layout_width="60dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_thumb_up_black_24dp"
            android:id="@+id/btnLike"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btnLike"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="0"
            android:id="@+id/tvRateFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</RelativeLayout>